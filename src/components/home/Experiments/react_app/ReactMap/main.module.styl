.container {
  position: fixed;
  z-index: 0;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.placeName {
  display flex
  align-items: center
  gap: 3px
  z-index: 200;
  font-size: 20px;
  position: fixed;
  top: 26px;
  text-align: right;
  right: 64px;
  text-transform: uppercase;
}

.loaderFly
  position fixed
  top: 0
  left: 0
  width: 100vw
  height: 100vh
  z-index: 1000000000
  display: flex
  justify-content: center
  align-items: center
  text-align: center
  padding-inline: 30px
  font-size: 50px
  font-weight: 700
  mix-blend-mode: difference
  hyphens: none
  p
    max-width: 1200px
  @media (max-width: 1200px)
    font-size: 20px
    height: 50vh
    padding-top: 200px
    p
      width: 300px



.marker
    width: 10px;
    height: 10px;
    background-color: black;
    border-radius: 9999%;
    &.negativeMarker
      width: 12px
      height: 12px
      background-color: transparent
      opacity 0.5
      -webkit-box-shadow: 0px 0px 4px 1px green;
      -moz-box-shadow: 0px 0px 4px 1px green;
      box-shadow: 0px 0px 4px 1px green;


@media (max-width: 600px)
  .placeName 
    font-size: 15px;
    right: 41px
    top: 15px

